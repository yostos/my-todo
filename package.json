{
  "name": "my-todo",
  "version": "1.0.0",
  "type": "module",
  "description": "Vue.js TODOアプリケーション with テスト自動化",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .vue,.js",
    "lint:fix": "eslint . --ext .vue,.js --fix",
    "format": "prettier --write \"src/**/*.{js,vue,css}\" \"*.{js,json,md}\""
  },
  "dependencies": {
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "@vue/test-utils": "^2.4.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.20.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
